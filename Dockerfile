################################################################################
FROM	"nginx:1.19.8-alpine"	AS nginx
################################################################################
RUN									\
	apk list							\
	|grep 'nginx'							\
	|cut -d' ' -f1							\
	|sed 's/-[0-9].*//'						\
	|sort								\
	|uniq								\
	|grep -v '^nginx$'						\
	|xargs apk del;

################################################################################
RUN	rm -frv	/etc/nginx/conf.d/default.conf;
################################################################################
VOLUME									\
	/var/cache/nginx						\
	/var/run

################################################################################
